@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="col-4 mx-auto" method="post" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <h2 class="text-center">Register</h2>

        <div class="form-group">
            <label asp-for="FirstName">Input First Name</label>
            <input type="text" asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" />
        </div>
        <div class="form-group">
            <label asp-for="LastName">Input Last Name</label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" />
        </div>
        <div class="form-group">
            <label asp-for="Gender">Choose Gender</label>
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                <option selected="selected" value="">Please Select</option>
            </select>
            <span asp-validation-for="Gender" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" class="form-control">
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label>
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-primary">
        </div>
</form>
