@model ProductViewModel
@{
    ViewData["Title"] = "ProductView";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/css/style.css" rel="stylesheet" />
<div class="container">
    <div>
        <div class="form-group form-check; p-5">
            <img style="height:auto; width:500px;" src="~/images/@Model.Id/@Model.MainImage" />
            <div class="pl-5 pt-3">
                <p>
                    <h2>Name: @Model.Name</h2>
                    <h4>Price: @Model.Price</h4>
                    <h4>Discount: @Model.Discount</h4>
                    @foreach (var item in Model.VariantModels)
                    {
                        <h4>@item.VariantName:  @item.Value</h4>
                    }
                </p>
            </div>
        </div>
    </div>
</div>
