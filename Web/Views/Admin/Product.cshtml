@model List<ProductViewModel>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container pt-3">
    <div class="row">
        <a asp-action="ProductAdd" class="btn btn-primary">Product Add</a>
    </div>
    <div class="row">
        <div class="card-deck">
            
            @if (Model.Any())
            {
                @foreach (var product in Model)
                {
                    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                        <div class="card-header" style="margin:auto">
                            <a asp-action="ProductView" asp-route-Id="@product.Id"><h3 >@product.Name</h3></a>
                        </div>
                        <a asp-action="ProductView" asp-route-Id="@product.Id">
                            <img class="card-img-top imageThumbnail" src="/images/@product.Id/@product.MainImage"
                                 asp-append-version="true" />
                        </a>
                        <div class="card-footer text-center">
                            <a asp-action="Edit" asp-route-Id="@product.Id" class="btn btn-primary m-1">Edit</a>
                            <a class="btn btn-danger m-1" asp-route-Id="@product.Id">Delete</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
