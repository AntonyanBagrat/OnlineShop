@model List<ProductViewModel>
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container pt-3">
    <div class="row">
        <a asp-action="ProductAdd" class="btn btn-primary">Product Add</a>
    </div>
    <div class="card-deck">
        @foreach (var product in Model)
        {
            <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@product.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="/images/@product.Id/@product.MainImage"
                     asp-append-version="true" />
                <div class="card-footer text-center">
                    <a class="btn btn-primary m-1">View</a>
                    <a class="btn btn-primary m-1">Edit</a>
                    <a class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
         }
    </div>
</div>
