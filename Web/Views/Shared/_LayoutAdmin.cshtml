<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body class="admin-main-Image">
    <nav class="navbar navbar-expand-lg navbar-dark bg-info">
        <a class="navbar-brand" asp-controller="Admin" asp-action="Product">Admin Home</a>
        <div class="collapse navbar-collapse nav-nav" id="navbarNav">
            <div class="navbar-nav">
                <a class="nav-link btn btn-success text-light" asp-action="Index" asp-controller="Product">Client</a>
            </div>
        </div>

        <div class="navbar navbar-expand-lg navbar-light collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-action="SignOut" asp-controller="Account">Sign out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="row">
        <div class="col-3 pt-3">
            <div class="nav flex-column nav-pills bg-info">
                <a asp-controller="Category" asp-action="Categories" class="nav-link text-light">Categories</a>
                <a asp-controller="Admin" asp-action="Product" class="nav-link text-light">Products</a>
                <a asp-controller="Variant" asp-action="VariantView" class="nav-link text-light">Product Variants</a>
                <a asp-controller="Vendor" asp-action="VendorView" class="nav-link text-light">Product Vendors</a>
            </div>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>

    <div>
        @RenderBody()
    </div>
    <script src="~/js/site.js"></script>
    <script src="~/jquery/jquery.js"></script>
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
</body>
</html>


