@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model CategoryAddViewModel
<div class="container pt-3">
    <form method="post" enctype="multipart/form-data">
        <div class="dropdown">
            <label>Choose Category</label>
            <select asp-for="Id" class="dropdown-header">
                @foreach (var item in ViewBag.categories)
                {
                    <option class="dropdown-item" value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group pt-1">
            <input placeholder="Input Subcategory" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group pt-1">
            <label>Choose Image</label><br />
            <input class="btn btn-secondary" name="ImageFile" type="file" />
        </div>
        <div>
            <button class="btn btn-success" type="submit">Add</button>
        </div>
    </form>
</div>
