@model List<CategoryViewModel>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container pt-3">
        <div class="row">
            <a asp-action="CategoryAdd" class="btn btn-primary">Category Add</a>
        </div>
        <div class="row pt-3">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td><a asp-action="CategoryEdit" asp-route-Id="@item.Id" class="btn bg-primary">Edit</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

