@model CategoryAddViewModel
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var buttonText = "Add";
    @if (Model.Id > 0)
    {
        buttonText = "Edit";
    }
}
<div class="container pt-3">
    <form method="post" asp-controller="Category" asp-action="CategoryAdd" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="text" asp-for="Name" placeholder="Input Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label>Choose Image</label><br />
            <input class="btn btn-secondary" name="ImageFile" type="file" />
        </div>
        <div>
            <button type="submit" class="btn btn-success">@buttonText</button>
        </div>
    </form>
</div>


