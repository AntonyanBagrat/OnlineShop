@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model ProductVariantViewModel
<div class="p-3">
    <form method="post">
        <div>
            <input type="hidden" asp-for="ProductId" />
            <label>Select Variant</label><br />
            <div class="dropdown">
                <select class="dropdown-header" asp-for="VariantId">
                    @foreach (var item in ViewBag.variants)
                    {
                        <option class="dropdown-item" value="@item.Id">
                            @item.Name
                        </option>
                    }
                </select><br />
            </div>
            <div class="form-group">
                <label>Input variant value</label><br />
                <input class="form-text" asp-for="Value" type="text" />
                <span asp-validation-for="Value"></span>
            </div>
            <div>
                <button onclick="myFunction()" type="submit">Save</button><br />
            </div>
            <script>
                function myFunction() {
                    alert("Variants added successfully!");
                }
            </script>
        </div>
    </form>
</div>


